{
  "uid": "hpc-jobs",
  "title": "HPC Job Observability",
  "schemaVersion": 38,
  "version": 2,
  "refresh": "10s",
  "timezone": "browser",
  "tags": ["hpc", "jobs", "prometheus", "nodes"],
  "time": {
    "from": "now-6h",
    "to": "now"
  },
  "templating": {
    "list": [
      {
        "name": "job",
        "label": "Job",
        "type": "query",
        "datasource": "Prometheus",
        "refresh": 1,
        "query": {
          "query": "label_values(hpc_job_cpu_usage_percent, job_id)",
          "refId": "jobVar"
        },
        "includeAll": true,
        "multi": true,
        "current": {
          "selected": true,
          "text": "All",
          "value": "$__all"
        }
      },
      {
        "name": "user",
        "label": "User",
        "type": "query",
        "datasource": "Prometheus",
        "refresh": 1,
        "query": {
          "query": "label_values(hpc_job_cpu_usage_percent, user)",
          "refId": "userVar"
        },
        "includeAll": true,
        "multi": true,
        "current": {
          "selected": true,
          "text": "All",
          "value": "$__all"
        }
      },
      {
        "name": "node",
        "label": "Node",
        "type": "query",
        "datasource": "Prometheus",
        "refresh": 1,
        "query": {
          "query": "label_values(hpc_node_cpu_usage_percent, node)",
          "refId": "nodeVar"
        },
        "includeAll": true,
        "multi": true,
        "current": {
          "selected": true,
          "text": "All",
          "value": "$__all"
        }
      }
    ]
  },
  "panels": [
    {
      "type": "row",
      "title": "Job Metrics",
      "collapsed": false,
      "gridPos": {"x": 0, "y": 0, "w": 24, "h": 1}
    },
    {
      "type": "timeseries",
      "title": "CPU Usage (%) per Job",
      "datasource": "Prometheus",
      "gridPos": {"x": 0, "y": 1, "w": 12, "h": 8},
      "targets": [
        {
          "refId": "A",
          "expr": "hpc_job_cpu_usage_percent{job_id=~\"$job\", user=~\"$user\"}",
          "legendFormat": "{{job_id}} ({{user}})"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Memory Usage (GB) per Job",
      "datasource": "Prometheus",
      "gridPos": {"x": 12, "y": 1, "w": 12, "h": 8},
      "targets": [
        {
          "refId": "A",
          "expr": "hpc_job_memory_usage_bytes{job_id=~\"$job\", user=~\"$user\"} / 1024 / 1024 / 1024",
          "legendFormat": "{{job_id}} ({{user}})"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "GPU Usage (%) per Job",
      "datasource": "Prometheus",
      "gridPos": {"x": 0, "y": 9, "w": 12, "h": 8},
      "targets": [
        {
          "refId": "A",
          "expr": "hpc_job_gpu_usage_percent{job_id=~\"$job\", user=~\"$user\"}",
          "legendFormat": "{{job_id}} ({{user}})"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Job Runtime (minutes)",
      "datasource": "Prometheus",
      "gridPos": {"x": 12, "y": 9, "w": 12, "h": 8},
      "targets": [
        {
          "refId": "A",
          "expr": "hpc_job_runtime_seconds{job_id=~\"$job\", user=~\"$user\"} / 60",
          "legendFormat": "{{job_id}} ({{user}})"
        }
      ]
    },
    {
      "type": "stat",
      "title": "Jobs by State",
      "datasource": "Prometheus",
      "gridPos": {"x": 0, "y": 17, "w": 12, "h": 6},
      "targets": [
        {
          "refId": "A",
          "expr": "hpc_job_state_total",
          "legendFormat": "{{state}}"
        }
      ],
      "options": {
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": ""
        },
        "orientation": "horizontal"
      }
    },
    {
      "type": "stat",
      "title": "Total Jobs",
      "datasource": "Prometheus",
      "gridPos": {"x": 12, "y": 17, "w": 12, "h": 6},
      "targets": [
        {
          "refId": "A",
          "expr": "sum(hpc_job_state_total)"
        }
      ],
      "options": {
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": ""
        },
        "orientation": "horizontal"
      }
    },
    {
      "type": "row",
      "title": "Node Metrics",
      "collapsed": false,
      "gridPos": {"x": 0, "y": 23, "w": 24, "h": 1}
    },
    {
      "type": "timeseries",
      "title": "Node CPU Usage (%) - Avg from Running Jobs",
      "datasource": "Prometheus",
      "gridPos": {"x": 0, "y": 24, "w": 12, "h": 8},
      "targets": [
        {
          "refId": "A",
          "expr": "hpc_node_cpu_usage_percent{node=~\"$node\"}",
          "legendFormat": "{{node}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100
        }
      }
    },
    {
      "type": "timeseries",
      "title": "Node Memory Usage (GB) - Total from Running Jobs",
      "datasource": "Prometheus",
      "gridPos": {"x": 12, "y": 24, "w": 12, "h": 8},
      "targets": [
        {
          "refId": "A",
          "expr": "hpc_node_memory_usage_bytes{node=~\"$node\"} / 1024 / 1024 / 1024",
          "legendFormat": "{{node}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "decgbytes"
        }
      }
    },
    {
      "type": "timeseries",
      "title": "Node GPU Usage (%) - Avg from Running Jobs",
      "datasource": "Prometheus",
      "gridPos": {"x": 0, "y": 32, "w": 12, "h": 8},
      "targets": [
        {
          "refId": "A",
          "expr": "hpc_node_gpu_usage_percent{node=~\"$node\"}",
          "legendFormat": "{{node}}"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100
        }
      }
    },
    {
      "type": "bargauge",
      "title": "Jobs per Node",
      "datasource": "Prometheus",
      "gridPos": {"x": 12, "y": 32, "w": 12, "h": 8},
      "targets": [
        {
          "refId": "A",
          "expr": "hpc_node_job_count{node=~\"$node\"}",
          "legendFormat": "{{node}}"
        }
      ],
      "options": {
        "orientation": "horizontal",
        "displayMode": "gradient",
        "showUnfilled": true
      },
      "fieldConfig": {
        "defaults": {
          "unit": "none",
          "min": 0
        }
      }
    },
    {
      "type": "table",
      "title": "Node Overview",
      "datasource": "Prometheus",
      "gridPos": {"x": 0, "y": 40, "w": 24, "h": 8},
      "targets": [
        {
          "refId": "A",
          "expr": "hpc_node_cpu_usage_percent",
          "legendFormat": "{{node}}",
          "format": "table",
          "instant": true
        },
        {
          "refId": "B",
          "expr": "hpc_node_memory_usage_bytes / 1024 / 1024 / 1024",
          "legendFormat": "{{node}}",
          "format": "table",
          "instant": true
        },
        {
          "refId": "C",
          "expr": "hpc_node_gpu_usage_percent",
          "legendFormat": "{{node}}",
          "format": "table",
          "instant": true
        },
        {
          "refId": "D",
          "expr": "hpc_node_job_count",
          "legendFormat": "{{node}}",
          "format": "table",
          "instant": true
        }
      ],
      "transformations": [
        {
          "id": "merge"
        },
        {
          "id": "organize",
          "options": {
            "renameByName": {
              "Value #A": "CPU %",
              "Value #B": "Memory (GB)",
              "Value #C": "GPU %",
              "Value #D": "Running Jobs"
            },
            "excludeByName": {
              "Time": true,
              "__name__": true,
              "instance": true,
              "job": true
            }
          }
        }
      ]
    }
  ]
}
