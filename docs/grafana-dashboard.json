{
  "uid": "hpc-jobs",
  "title": "HPC Job Observability",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "10s",
  "timezone": "browser",
  "tags": ["hpc", "jobs", "prometheus"],
  "time": {
    "from": "now-6h",
    "to": "now"
  },
  "templating": {
    "list": [
      {
        "name": "job",
        "label": "Job",
        "type": "query",
        "datasource": "Prometheus",
        "refresh": 1,
        "query": {
          "query": "label_values(hpc_job_cpu_usage_percent, job_id)",
          "refId": "jobVar"
        },
        "includeAll": true,
        "multi": true,
        "current": {
          "selected": true,
          "text": "All",
          "value": "$__all"
        }
      },
      {
        "name": "user",
        "label": "User",
        "type": "query",
        "datasource": "Prometheus",
        "refresh": 1,
        "query": {
          "query": "label_values(hpc_job_cpu_usage_percent, user)",
          "refId": "userVar"
        },
        "includeAll": true,
        "multi": true,
        "current": {
          "selected": true,
          "text": "All",
          "value": "$__all"
        }
      }
    ]
  },
  "panels": [
    {
      "type": "timeseries",
      "title": "CPU Usage (%)",
      "datasource": "Prometheus",
      "gridPos": {"x": 0, "y": 0, "w": 12, "h": 8},
      "targets": [
        {
          "refId": "A",
          "expr": "hpc_job_cpu_usage_percent{job_id=~\"$job\", user=~\"$user\"}",
          "legendFormat": "{{job_id}} ({{user}})"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Memory Usage (GB)",
      "datasource": "Prometheus",
      "gridPos": {"x": 12, "y": 0, "w": 12, "h": 8},
      "targets": [
        {
          "refId": "A",
          "expr": "hpc_job_memory_usage_bytes{job_id=~\"$job\", user=~\"$user\"} / 1024 / 1024 / 1024",
          "legendFormat": "{{job_id}} ({{user}})"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "GPU Usage (%)",
      "datasource": "Prometheus",
      "gridPos": {"x": 0, "y": 8, "w": 12, "h": 8},
      "targets": [
        {
          "refId": "A",
          "expr": "hpc_job_gpu_usage_percent{job_id=~\"$job\", user=~\"$user\"}",
          "legendFormat": "{{job_id}} ({{user}})"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "Job Runtime (minutes)",
      "datasource": "Prometheus",
      "gridPos": {"x": 12, "y": 8, "w": 12, "h": 8},
      "targets": [
        {
          "refId": "A",
          "expr": "hpc_job_runtime_seconds{job_id=~\"$job\", user=~\"$user\"} / 60",
          "legendFormat": "{{job_id}} ({{user}})"
        }
      ]
    },
    {
      "type": "stat",
      "title": "Jobs by State",
      "datasource": "Prometheus",
      "gridPos": {"x": 0, "y": 16, "w": 12, "h": 6},
      "targets": [
        {
          "refId": "A",
          "expr": "hpc_job_state_total",
          "legendFormat": "{{state}}"
        }
      ],
      "options": {
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": ""
        },
        "orientation": "horizontal"
      }
    },
    {
      "type": "stat",
      "title": "Total Jobs",
      "datasource": "Prometheus",
      "gridPos": {"x": 12, "y": 16, "w": 12, "h": 6},
      "targets": [
        {
          "refId": "A",
          "expr": "sum(hpc_job_state_total)"
        }
      ],
      "options": {
        "reduceOptions": {
          "calcs": ["lastNotNull"],
          "fields": ""
        },
        "orientation": "horizontal"
      }
    }
  ]
}
